/* pages/posts/post.wxss */
swiper{
  width: 100%;
  height: 480rpx;
}
swiper image{
  width: 100%;
}
.post-container{
  display: flex;
  flex-direction: column;
  margin: 20rpx 0 40rpx;
  background-color: #fff;
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;
  padding-bottom: 5px;
}
.post-author-date{
  margin: 10rpx 0 20rpx 5px;
  display: flex;
  align-items: center;
}
.post-author{
  width: 60rpx;
  height: 60rpx;
}
.post-date{
  margin: 0 0 0 20rpx;
  font-size: 13px;
}
.post-title{
  font-size: 17px;
  font-weight: bold;
  color: #333;
  margin: 0 0 10px 10px;
}
.post-image{
  margin: 0 15px 0 16px;
  width: 100%;
  height: 340rpx;
}
.post-content{
  color: #666;
  font-size: 14px;
  margin: 0 0 20rpx 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}
.post-like{
  font-size: 13px;
  line-height: 16px;
  margin-left: 10px;
  display: flex;
}
.post-like-item{
  display: flex;
  align-items: center;
}
.post-like-image{
  width: 20px;
  height: 20px;
}
.post-like-text{
  font-size: 14px;
  margin: 5px 20px 0 5px;
}